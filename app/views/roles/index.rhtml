<%= render :partial => 'header' %>
<div id="content">
<% form_for (:search, :url => roles_path) do |f| %>
          	<%= text_field_tag :keywords %>
					<%= f.submit "Search" %>
<% end %>

<% if @roles_count > 0 %>
    <div id="admin-actions"><%= @roles_count %> entries found</div>
<table border="0" cellpadding="10" cellspacing="0" width="80%" class="list">
  <tr >
    <th><%= order_by_link :id %></th>
		<th><%= order_by_link :name %></th>
		<th colspan="2">&nbsp;</th>
  </tr>
	<%= render :partial => 'role', :collection => @roles %>
</table>
<div id="admin-actions">
	Per page: <%= per_page_select %>
  <% if @search.page_count > 1 %>
     <br />Page: <%= page_select %>
  	<% end %>
	<% else %>
    No entries were returned
	<% end %>
</div>
</div>