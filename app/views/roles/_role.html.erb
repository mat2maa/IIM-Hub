<tr>
  <td><%= role.id %></td>
  <td><%= role.name %></td>
  <td><%= link_to 'Edit',
                  edit_role_path(role),
                  class: 'btn btn-mini' %></td>
  <td>
    <%= link_to 'Delete',
                {action: "destroy",
                 id: role.id},
                confirm: 'Are you sure?',
                method: :delete if role.id != 1 %>
  </td>
</tr>