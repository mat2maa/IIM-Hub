<% if @screener_playlists_count > 0 %>
  <table class="table">
    <thead>
    <tr>
      <th>
        <%= sort_link(@search,
                      :id,
                      'ID') %>
      </th>
      <th>
        <%= sort_link(@search,
                      :airline_name,
                      'Airline') %>
      </th>
      <th>
        <%= sort_link(@search,
                      :start_cycle,
                      'Start Date') %>
      </th>
      <th>
        <%= sort_link(@search,
                      :end_cycle,
                      'End Date') %>
      </th>
      <th>
        <%= sort_link(@search,
                      :video_playlist_type_name,
                      'Video Playlist Type') %>
      </th>
      <th width="180" colspan="2"></th>
    </tr>
    </thead>

    <%= render partial: "screener_playlist",
               collection: @screener_playlists %>
  </table>

  <br/>
  <br/>
  <%= will_paginate @screener_playlists,
                    inner_window: 1,
                    renderer: BootstrapPagination::Rails,
                    class: 'pagination pagination-small' %>
  <%
     def items_per_page_select(collection = ScreenerPlaylists)
       select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page),
                  class: 'items_per_page_select_menu'
     end
  %>
  <%= form_for '/screener_playlists', method: :get, html: {class: 'items_per_page_select'} do |f| %>
    <span>Items per page: </span>
    <%= items_per_page_select @screener_playlists %>
    <%= f.submit "Submit",
                 class: 'btn btn-small' %>
    <br>
    <br>
    <%= @screener_playlists_count %> video screener playlists found
    <br>
  <% end %>

<% else %>

  No playlists were found

<% end %>