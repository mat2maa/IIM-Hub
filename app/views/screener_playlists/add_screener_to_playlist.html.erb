<center>
  <div class="overlay">
    <%= link_to_hide_overlay 'X',
                             screener_playlists_path,
                             id: "cancel" %>
    <br/>
    <strong>Add Screener to Playlist</strong>

    <div id="search_form">
      <% remote_form_for :screener_playlists,
                         class: 'spinner-trigger' do |f| %>
        <%= hidden_field_tag 'id',
                             params[:id] %>
        <%= hidden_field_tag 'playlist_id',
                             params[:id] %>
        <%= render partial: 'screener_search_form',
                   locals: {f: f} %>
      <% end %>
    </div>
    <%= image_tag 'spinner.gif',
                  id: 'spinner',
                  class: 'transparent' %>
    <br/>

    <div id="item_added"></div>
    <div id="screeners" class="lists">
      <%= render partial: "screeners" %>
    </div>
  </div>
</center>