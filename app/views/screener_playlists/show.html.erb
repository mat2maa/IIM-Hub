<script>
  jQuery(document).ready(function () {
    window.print();
  });
</script>

<%= render partial: 'layouts/movies_nav' %>

<div class="container">

  <div class="row">
    <div class="span12">
      <div id="bootstrap-flash">
        <%= bootstrap_flash %>
      </div>
    </div>
    <!--/span-->
  </div>
  <!--/row-->

  <div class="row">
    <div class="span3">
      <div class="content">
        <div class="info info-title">Playlist Type</div>
        <div class="info-list">
          <ul>
            <li class="info">
              <%= "#{@screener_playlist.video_playlist_type.name} " if !@screener_playlist.video_playlist_type.nil? %>
            </li>
          </ul>
        </div>

        <br>

        <div class="info info-title"><%= @screener_playlist.airline.code if !@screener_playlist.airline_id.nil? %><%= @screener_playlist.start_cycle.strftime("%m%y") %>
          Information
        </div>
        <div class="info-list">
          <ul>
            <li class="info">
              Media Instruction: <%= @screener_playlist.media_instruction.gsub(/\n/, '<br/>') %>
            </li>
          </ul>
        </div>

        <br>

        <div class="info info-title">Tools</div>
        <div class="info-list">
          <ul>
            <li class="info">
              <%= link_to "Download English PDF",
                          {controller: "screener_playlists",
                           action: "show",
                           id: @screener_playlist,
                           format: "pdf"},
                          target: "_blank" %>
            </li>
            <li class="info">
              <%= link_to "Download Chinese PDF",
                          {controller: "screener_playlists",
                           action: "show_chinese",
                           id: @screener_playlist,
                           format: "pdf"},
                          target: "_blank" %>
            </li>
            <li class="info">
              <%= link_to "Export as Excel",
                          controller: "screener_playlists",
                          action: "export_to_excel",
                          id: @screener_playlist %>
            </li>
            <li class="info">
              <%= link_to "Edit Playlist",
                          {controller: "screener_playlists",
                           action: "edit",
                           id: @screener_playlist},
                          target: "_blank" %>
            </li>
          </ul>
        </div>
      </div>
      <!--/content-->
    </div>
    <!--/span-->

    <div class="span9">
      <div class="info info-title playlist-title">Playlist</div>
      <div id="playlist_item_view_container">
        <%= render partial: 'playlist_item_view',
                   collection: @screener_playlist.screener_playlist_items_sorted %>
      </div>

      <%= link_to 'Back',
                  screener_playlists_path %>
    </div>
  </div>
</div>
