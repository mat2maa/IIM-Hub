<% if @screeners_count > 0 %>
  <%= form_tag url_for(controller: "screener_playlists",
                       action: "add_multiple_screeners"),
               id: "multiple_videos",
               remote: true do %>
    <%= hidden_field_tag 'playlist_id',
                         params[:id] %>
    <%= submit_tag 'Add Selected to Playlist',
                   id: 'add_selected_hidden',
                   style: 'display: none;' %>
    <table class="table" id="no-more-tables">
      <thead>
      <tr>
        <th>
          <%= sort_link @search,
                        :id,
                        'ID',
                        {},
                        {remote: true} %>
        </th>
        <th>
          <%= sort_link @search,
                        :episode_title,
                        'Episode Title',
                        {},
                        {remote: true} %>
        </th>
        <th>In Playlists With Same Airline</th>
        <th>&nbsp;</th>
        <th>
          <%= check_box_tag('check_all',
                            'check_all',
                            false) %>
        </th>
      </tr>
      </thead>

      <tbody>
      <% @screeners.each do |screener| %>
        <tr class="playlist-entry">
          <td data-title="ID"><%= screener.id %></td>
          <td data-title="Episode Title"><%= screener.episode_title %></td>
          <td data-title="In Playlists With Same Airline">
            <span id="exists">
                <% if (screener.in_playlists!="" && !screener.in_playlists.nil?) %>
                    <%= ScreenerPlaylist.with_same_airline_and_screener(screener.id,
                                                                        (@screener_playlist.airline_id unless @screener_playlist.airline.nil?)).collect { |playlist| link_to("#{playlist.airline.code unless playlist.airline.nil?}#{playlist.start_cycle.strftime("%m%y") unless playlist.start_cycle.nil?}", edit_screener_playlist_path(playlist), target: "_blank") }.join(', ').html_safe %>
                <% end %>
            </span>
          </td>
          <td>
            <%= link_to "add to playlist",
                        add_screener_screener_playlist_path(@screener_playlist, screener_id: screener.id),
                        method: :post,
                        remote: true,
                        class: 'spinner-trigger' %>
          </td>
          <td data-title="Select"><%= check_box_tag "screener_ids[]", screener.id %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

  <br/>
  <br/>

  <%= will_paginate @screeners,
                    inner_window: 1,
                    renderer: BootstrapPagination::Rails,
                    class: 'pagination pagination-small' %>
  <%
     def items_per_page_select(collection = Screeners)
       select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page),
                  class: 'items_per_page_select_menu'
     end
  %>
  <%= form_for '/screeners', method: :get, html: {class: 'items_per_page_select'}, remote: true do |f| %>
    <span>Items per page: </span>
    <%= items_per_page_select @screeners %>
    <%= f.submit "Submit",
                 class: 'btn btn-small' %>
    <br>
    <br>
    <%= @screeners_count %> screeners found
    <br>
  <% end %>
<% else %>
  No screeners were found
<% end %>

<script>

  var $ = jQuery;

  $(document).ready(function () {

    $('#check_all').click(function () {
      if (this.checked) {
        $('.playlist-entry').find(':checkbox').each(function () {
          this.checked = true;
        });
      } else {
        $('.playlist-entry').find(':checkbox').each(function () {
          this.checked = false;
        });
      }
    });

  });

</script>