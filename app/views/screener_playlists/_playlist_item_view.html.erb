<% @screener = playlist_item_view.screener %>
<% @screener_playlist_item = playlist_item_view %>
<tr id="item_<%= playlist_item_view.id %>">
	<% if playlist_item_view.screener.nil? %>
    <td colspan="2">Missing video <%= playlist_item_view.screener_id %></td>

<% else %>
	
<td>
	<table width="100%"  class="playlist">
		<tr>
			<td width="200"><strong>Programme Title:</strong></td>
			<td><%= playlist_item_view.screener.video.programme_title %></td>
		</tr>
		<tr>
			<td><strong>Episode Title:</strong></td>
			<td><%= playlist_item_view.screener.episode_title %></td>
		</tr>
		<tr>
			<td><strong>Distributor:</strong></td>
			<td><%= playlist_item_view.screener.video.video_distributor.company_name %></td>
		</tr>
		<tr>
			<td><strong>Full Genre:</strong></td>
			<td><%= playlist_item_view.screener.video.video_genres_string_with_parent %></td>
		</tr>
		<tr>
			<td><strong>Commercial Runtime:</strong></td>
			<td><%= playlist_item_view.screener.video.commercial_run_time.minutes if !playlist_item_view.screener.video.commercial_run_time.nil? %></td>
		</tr>
		<tr>
			<td><strong>Lang Tracks:</strong></td>
			<td><%= playlist_item_view.screener.video.language_tracks.join(', ') if !playlist_item_view.screener.video.language_tracks.nil? %></td>
		</tr>
		<tr>
			<td><strong>Lang Subtitles:</strong></td>
			<td><%= playlist_item_view.screener.video.language_subtitles.join(', ') if !playlist_item_view.screener.video.language_subtitles.nil? %></td>
		</tr>
		<tr>
			<td><strong>Synopsis:</strong></td>
			<td><%= playlist_item_view.screener.video.synopsis %></td>
		</tr>
	</table>
	<br/><br/>
</td>
 <% end %>
</tr>