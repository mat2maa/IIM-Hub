<%= render partial: 'header' %>

<div class="container">

  <div class="row">
    <div class="span12">
      <div id="bootstrap-flash">
        <%= bootstrap_flash %>
      </div>
    </div>
    <!--/span-->
  </div>
  <!--/row-->

  <div class="row">

    <%= render partial: 'form' %>

    <div class="span3">
      <div class="tabbable" style="<%= controller.action_name == 'index' ? 'margin-top: 0px;' : 'margin-top: -20px;' %>">
        <ul class="nav nav-tabs pre-nav-below">
          <li>
            <a>Search Form</a>
          </li>
        </ul>
      </div>
      <%= render partial: 'search_form',
                 object: @search %>
    </div>
    <!--/span-->
  </div>
  <!--/row-->
  <div class="row">
    <div class="span12">
      <div class="content">
        <%= yield :playlist %>
      </div>
    </div>
  </div>

</div>
<!--/container-->


