<% if MOVIE_MODELS.include?(controller_name) %>
  <%= render partial: 'layouts/movies_nav' %>
<% elsif AUDIO_MODELS.include?(controller_name) %>
  <%= render partial: 'layouts/audio_nav' %>
<% elsif AUDIO_SETTINGS_MODELS.include?(controller_name) %>
  <%= render partial: 'layouts/settings_nav' %>
<% elsif MOVIE_SETTINGS_MODELS.include?(controller_name) %>
  <%= render partial: 'layouts/movies_settings_nav' %>
<% elsif controller_name == 'airlines' %>
  <% if (MOVIE_MODELS+MOVIE_SETTINGS_MODELS+%w(movies_settings)).include?("#{Rails.application.routes.recognize_path(request.referrer)[:controller]}") %>
    <%= render partial: 'layouts/movies_settings_nav' %>
  <% else %>
    <%= render partial: 'layouts/settings_nav' %>
  <% end %>
<% elsif USERS_SETTINGS_MODELS.include?(controller_name) %>
  <%= render partial: 'layouts/users_nav' %>
<% end %>
