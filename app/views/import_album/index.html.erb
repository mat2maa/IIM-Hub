<%= render partial: 'layouts/audio_nav' %>

<div class="container">

  <div class="row">
    <div class="span12">
      <div id="bootstrap-flash">
        <%= bootstrap_flash %>
      </div>
    </div>
    <!--/span-->
  </div>
  <!--/row-->

  <div class="row">
    <div class="span3" id="search_form">
      <div class="info info-title">Search MusicBrainz</div>
      <br>
      <%= form_tag find_release_path,
                   remote: true,
                   html: {id: 'import_album_form'} do %>

        <div class="controls controls-row">
          <%= text_field_tag 'title',
                             nil,
                             placeholder: 'Album Title',
                             class: 'span3' %>
        </div>

        <div class="controls controls-row">
          <%= text_field_tag 'artist',
                             nil,
                             placeholder: 'Artist',
                             class: 'span3' %>
        </div>

        <div class="controls controls-row">
          <%= text_field_tag 'query',
                             nil,
                             placeholder: 'Query',
                             class: 'span3' %>
        </div>

        <%= submit_tag 'Search', class: 'btn' %>

      <% end %>
      <br/>

    </div>
    <!--/span-->

    <div class="span9">
      <div id="results"></div>
    </div>
  </div>
  <!--/row-->
</div>
<!--/container-->
