              </li>
              <li class='<%= 'active' if controller_name == 'programs' %>'>
                <%= link_to 'Programs',
                            controller: 'programs' %>
              </li>
              <li class='<%= 'active' if controller_name == 'categories' %>'>
                <%= link_to 'Categories',
                            controller: 'categories' %>
              </li>
              <li class='<%= 'active' if controller_name == 'vos' %>'>
                <%= link_to 'VOs',
                            controller: 'vos' %>
              </li>
              <li class='<%= 'active' if controller_name == 'vo_durations' %>'>
                <%= link_to 'VO Durations',
                            controller: 'vo_durations' %>
