          <%= image_tag 'text-logo.png' %>
        </div>
      <% end %>
      <a class="brand" href="<%= settings_path %>">Audio Settings</a>

      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Playlists <b class="caret"></b></a>
