<% content_for :title do %> - <%= controller_name.split('_').map(&:capitalize).join(' ') %>
<% end %>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to options = {controller: 'dashboard'}, html_options = {class: 'brand'} do %>
        <div id="logo">
          <%= image_tag 'text-logo.png' %>
        </div>
      <% end %>
      <a class="brand" href="<%= settings_path %>">User Settings</a>

      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class='<%= 'active' if controller_name == 'users' %>'>
            <%= link_to 'Users',
                        controller: 'users' %>
          </li>
          <li class='<%= 'active' if controller_name == 'roles' %>'>
            <%= link_to 'Roles',
                        controller: 'roles' %>
          </li>
          <li class='<%= 'active' if controller_name == 'rights' %>'>
            <%= link_to 'Rights',
                        controller: 'rights' %>
          </li>
        </ul>
      </div>
      <!--/.nav-collapse -->
      <div class="btn-group">
      </div>
    </div>
  </div>
</div>

