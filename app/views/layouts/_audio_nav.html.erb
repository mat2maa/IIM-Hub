<% content_for :title do %> - <%= controller_name.split('_').map(&:capitalize).join(' ') %>
<% end %>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to options = {controller: 'dashboard'}, html_options = {class: 'brand'} do %>
        <div id="logo">
          <%= image_tag 'text-logo.png' %>
        </div>
      <% end %>
      <a class="brand" href="#">Audio/Album Playlist Maker</a>

      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if controller_name == 'audio_playlists' %>">
            <%= link_to 'Audio Playlists',
                        controller: 'audio_playlists' %>
          </li>
          <li class="<%= 'active' if controller_name == 'album_playlists' %>">
            <%= link_to 'Album Playlists',
                        controller: 'album_playlists' %>
          </li>
          <li class="<%= 'active' if controller_name == 'tracks' %>">
            <%= link_to 'Tracks',
                        controller: 'tracks' %>
          </li>
          <li class="<%= 'active' if controller_name == 'albums' %>">
            <%= link_to 'Albums',
                        controller: 'albums' %>
          </li>
          <li class="<%= 'active' if controller_name == 'settings' %>">
            <%= link_to 'Settings',
                        controller: 'settings' %>
          </li>
        </ul>
      </div>
      <!--/.nav-collapse -->
      <div class="btn-group">
      </div>
    </div>
  </div>
</div>