                <%= link_to 'Commercial Run Times',
                            controller: 'commercial_run_times' %>
              </li>
              <li class='<%= 'active' if controller_name == 'master_languages' %>'>
                <%= link_to 'Languages',
                            controller: 'master_languages' %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <!--/.nav-collapse -->
      <div class="btn-group">
      </div>
    </div>
  </div>
</div>

