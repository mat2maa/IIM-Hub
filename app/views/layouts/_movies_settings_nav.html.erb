        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to options = {controller: 'dashboard'}, html_options = {class: 'brand'} do %>
        <div id="logo">
          <%= image_tag 'text-logo.png' %>
        </div>
      <% end %>
      <a class="brand" href="#">Movie Settings</a>

      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Types <b class="caret"></b></a>
