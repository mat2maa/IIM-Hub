                            controller: 'movie_genres' %>
              </li>
              <li class='<%= 'active' if controller_name == 'video_genres' %>'>
                <%= link_to 'Video Genres',
                            controller: 'video_genres' %>
              </li>
              <li class='<%= 'active' if controller_name == 'video_parent_genres' %>'>
                <%= link_to 'Video Parent Genres',
                            controller: 'video_parent_genres' %>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Suppliers <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li class='<%= 'active' if controller_name == 'suppliers' %>'>
                <%= link_to 'Suppliers',
                            controller: 'suppliers' %>
              </li>
              <li class='<%= 'active' if controller_name == 'supplier_categories' %>'>
                <%= link_to 'Supplier Categories',
                            controller: 'supplier_categories' %>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Other <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li class='<%= 'active' if controller_name == 'airlines' %>'>
                <%= link_to 'Airlines',
                            controller: 'airlines' %>
