              <li class='<%= 'active' if controller_name == 'movie_types' %>'>
                <%= link_to 'Movie Types',
                            controller: 'movie_types' %>
              </li>
              <li class='<%= 'active' if controller_name == 'movie_playlist_types' %>'>
                <%= link_to 'Movie Playlist Types',
                            controller: 'movie_playlist_types' %>
              </li>
              <li class='<%= 'active' if controller_name == 'video_playlist_types' %>'>
                <%= link_to 'Video Playlist Types',
                            controller: 'video_playlist_types' %>
              </li>
              <li class='<%= 'active' if controller_name == 'master_playlist_types' %>'>
                <%= link_to 'Master Playlist Types',
                            controller: 'master_playlist_types' %>
