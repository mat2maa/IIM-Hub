                    :html => {:id => 'category_form'} do %>
<table>
  <tr>
	<td>Category Name</td>
    <td>
      <%= text_field_tag 'category[name]' %>
    </td>
    <td colspan="2">
      <%= submit_tag "Add New Category" %>
    </td>
  </tr>
</table>
<% end %>