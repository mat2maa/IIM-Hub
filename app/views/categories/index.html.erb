<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render partial: 'form' %>
    <br/>
    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="categories">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Category Name</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>
      <%= render partial: 'category',
                 collection: @categories %>
    </table>

    <br/>
    <br/>
    <%= will_paginate @categories %>
    <%
      def items_per_page_select(collection = Categories)
        select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page)
      end
    %>
    <%= form_for '/categories', method: :get, html: { class: 'items_per_page_select' } do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @categories %>
      <%= f.submit "Submit" %>
    <% end %>

  </center>
</div>