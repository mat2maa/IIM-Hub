var $ = jQuery;

var form = " <%= escape_javascript(render("dialog_form")) %> ",
    dataRemote = 'a[data-remote=true], form[data-remote=true] input[type=submit]',
    dialog = '#add_album_dialog',
    content = '#add_album',
    spinner = '#spinner';

$(content).html(form);
$(spinner).addClass("transparent");

$(document).on('click', dataRemote, function () {
  $(spinner).removeClass("transparent");
});

$(dialog).on("dialogbeforeclose", function( event, ui ) {
  $(content).empty();
});