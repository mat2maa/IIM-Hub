<% if @album_playlists_count > 0 %>
  <table class="table">
    <thead>
    <tr>
      <th>
        <%= sort_link(@search,
                      :id,
                      "ID") %>
      </th>
      <th>
        <%= sort_link(@search,
                      :client_playlist_code,
                      "Client Playlist Code") %>
      </th>
      <th>
        <%= sort_link(@search,
                      :airline_name,
                      "Airline Name") %>
      </th>
      <th>
        <%= sort_link(@search,
                      :in_out,
                      "In/Out") %>
      </th>
      <th>
        <%= sort_link(@search,
                      :start_playdate,
                      "Start Date") %>
      </th>
      <th>
        <%= sort_link(@search,
                      :end_playdate,
                      "End Date") %>
      </th>
      <th width="180" colspan="2"></th>
    </tr>
    </thead>

    <%= render partial: "album_playlist",
               collection: @album_playlists %>
  </table>

  <br/>
  <br/>
  <%= will_paginate @album_playlists,
                    inner_window: 1,
                    renderer: BootstrapPagination::Rails,
                    class: 'pagination pagination-small' %>
  <%
     def items_per_page_select(collection = AlbumPlaylist)
       select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page),
                  class: 'items_per_page_select_menu'
     end
  %>
  <%= form_for '/album_playlists', method: :get, html: {class: 'items_per_page_select'} do |f| %>
    <span>Items per page: </span>
    <%= items_per_page_select @album_playlists %>
    <%= f.submit "Submit",
                 class: 'btn btn-small' %>
    <br>
    <br>
    <%= @album_playlists_count %> album playlists found
    <br>
  <% end %>

<% else %>
  No playlists were found
<% end %>