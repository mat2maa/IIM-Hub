<table class="table table-hover" id="no-more-tables" width="100%">
  <thead>
  <tr>
    <% @columns.each.with_index do |column, index| %>
      <th <%= raw("style='display: none;' data-display='none'") if session[:album_playlist_checked].present? && session[:album_playlist_checked][index] == 'false' %>>
        <%= column %>
      </th>
    <% end %>
    <th>
      <%= link_to raw("<i class='icon icon-edit'></i>"),
                          categories_path,
                          id: "add",
                          target: "_blank" %>
      Category
    </th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody id="albumplaylist" class="sort-list" data-url="<%= sort_album_playlist_path %>" style="cursor: move">
  <% @album_playlist.album_playlist_items_sorted.each.with_index do |item, index| %>
    <%= render partial: 'playlist_item', object: item, locals: {position: index + 1} %>
  <% end %>
  </tbody>
</table>

