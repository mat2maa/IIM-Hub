        <% if permitted_to? :edit,
                            :origins %>
          <%= link_to 'Origins',
                      origins_path,
                      class: 'btn btn-large btn-block btn-inverse' %>
        <% end %>
        <% if permitted_to? :edit,
                            :categories %>
          <%= link_to 'Categories',
                      categories_path,
                      class: 'btn btn-large btn-block btn-inverse' %>
