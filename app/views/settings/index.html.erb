                            :album_categories %>
          <%= link_to 'Album Categories',
                      album_categories_path,
                      class: 'btn btn-large btn-block btn-inverse' %>
        <% end %>
        <% if permitted_to? :edit,
                            :genres %>
          <%= link_to 'Genres',
                      genres_path,
                      class: 'btn btn-large btn-block btn-inverse' %>
        <% end %>
        <% if permitted_to? :edit,
                            :labels %>
          <%= link_to 'Record Labels',
                      labels_path,
                      class: 'btn btn-large btn-block btn-inverse' %>
        <% end %>
        <% if permitted_to? :edit,
                            :publishers %>
          <%= link_to 'Publishers',
                      publishers_path,
                      class: 'btn btn-large btn-block btn-inverse' %>
