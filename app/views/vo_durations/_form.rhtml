<% form_remote_tag :url => {:action => 'create'}, :html => {:id => 'vo_duration_form'} do %>
<table>
  <tr>
	<th>Name</th>
    <td>
      <%= text_field_tag 'vo_duration[name]', "", :size=>5 %>
    </td>
		<th>VO Duration in seconds</th>
    <td>    
      <%= text_field_tag 'vo_duration[duration]', "", :size=>5 %>
    </td>
    <td colspan="2">
      <%= submit_tag "Add New VO Duration" %>
    </td>
  </tr>
</table>
<% end %>