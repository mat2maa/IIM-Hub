<% form_remote_tag :url => {:action => 'create'}, 
                    :html => {:id => 'movie_genre_form'}  do %>
<table>
  <tr>
	<td>Movie Genre Name</td>
    <td>
      <%= text_field_tag 'movie_genre[name]' %>
    </td>
    <td colspan="2">
      <%= submit_tag "Add New Movie Genre" %>
    </td>
  </tr>
</table>
<% end %>