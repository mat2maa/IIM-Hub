<%= render partial: 'header' %>
<div id="content">
  <center>
    <h1>New Right</h1>

    <%= form_for(@right) do |f| %>
        <%= error_messages_for(f.object) %>

        <p>
          <%= f.label :name %><br/>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :controller %><br/>
          <%= f.text_field :controller %>
        </p>

        <p>
          <%= f.label :action %><br/>
          <%= f.text_field :action %>
        </p>

        <p>
          <%= f.submit "Create" %>
        </p>
    <% end %>

    <%= link_to 'Back',
                airlines_path %>

  </center>
  <br/><br/>
</div>