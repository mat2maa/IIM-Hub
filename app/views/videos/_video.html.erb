<tr id="video-<%= video.id %>">
  <td data-title="ID"><%= link_to video.id,
                  video_path(id: video.id),
                  target: "_blank" %></td>
  <td data-title="Programme Title"><%= video.programme_title %></td>
  <td data-title="Company Name"><%= video.video_distributor.company_name if !video.video_distributor.nil? %>&nbsp;</td>
  <td data-title="Video Type"><%= video.video_type %></td>
  <td data-title="Commercial Runtime"><%= video.commercial_run_time.minutes if !video.commercial_run_time.nil? %>&nbsp;</td>
  <td data-title="Genres"><%= video.video_genres.collect { |r| r.name }.to_sentence %>&nbsp;</td>
  <td data-title="Screeners Held"><%= video.screeners_count > 0 ? 'Yes' : 'No' %></td>
  <td data-title="Masters Held"><%= video.masters_count > 0 ? 'Yes' : 'No' %></td>
  <% if (params[:playlist_id] || params["action"]=="add_video_to_playlist") %>
    <td>
      <% if !video.to_delete %>
        <%= link_to "add to playlist",
                    remote: true,
                    url: {controller: "video_playlists",
                          action: "add_video",
                          id: params[:id],
                          video_id: video.id},
                    class: 'spinner-trigger' %>
      <% else %>
        Pending Deletion
      <% end %>
    </td>
  <% else %>
    <td data-title="Actions">
      <%= link_to 'Edit',
                  edit_video_path(video),
                  target: "_blank",
                  class: 'btn btn-mini' %>
      <% if !video.to_delete %>
        <%= link_to 'Delete',
                    video_url(video),
                    remote: true,
                    method: :delete,
                    confirm: 'Are you sure?',
                    class: 'spinner-trigger btn btn-mini',
                    with: "'redirect_url=#{request.url}'" %>
      <% else %>
        <% if permitted_to? :admin_delete,
                            :videos %>
          <%= link_to 'Delete',
                      video_url(video),
                      remote: true,
                      method: :delete,
                      confirm: 'Are you sure?',
                      class: 'spinner-trigger btn btn-mini',
                      with: "'redirect_url=#{request.url}'" %>
        <% end %>
        <%= link_to 'Restore',
                    restore_video_path(video.id),
                    remote: true,
                    class: 'spinner-trigger',
                    class: 'btn btn-mini' %>
      <% end %>
    </td>
  <% end %>
</tr>
