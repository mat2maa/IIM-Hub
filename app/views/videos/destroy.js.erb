var $ = jQuery;

var $element = $("#video-<%= @video.id %>");
var notice = "<%= escape_javascript(flash[:notice]) %>";

<% if @video_is_deleted %>
    <% if @video.active %>
        $element.fadeOut("fast");
    <% else %>
        window.location = "<%= escape_javascript(videos_url) %>";
    <% end %>
<% else %>
    $('#notice').html(notice);
<% end %>

