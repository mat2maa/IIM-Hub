<% form_remote_tag :url => {:action => 'create'}, 
                    :html => {:id => 'video_genre_form'}  do %>
<table>
  <tr>
	<td>Video Genre Name</td>
    <td>
      <%= text_field_tag 'video_genre[name]' %>
    </td>
		<td>
			<%= select_tag('video_genre[video_parent_genre_id]', options_from_collection_for_select(VideoParentGenre.all, :id, :name)) %> 
		</td>
    <td colspan="2">
      <%= submit_tag "Add New Video Genre" %>
    </td>
  </tr>
</table>
<% end %>