<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render partial: 'form' %>
    <br/>
    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="video_genres">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Parent</td>
        <td class="list-header">Genre</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>
      <%= render partial: 'video_genre',
                 collection: @video_genres %>
    </table>
    <br/>
    <br/>
    <%= will_paginate @video_genres %>
    <%
      def items_per_page_select(collection = VideoGenres)
        select_tag :per_page, options_for_select([10, 20, 50, 100], collection.per_page)
      end
    %>
    <%= form_for '/video_genres', method: :get do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @video_genres %>
      <%= f.submit "Submit" %>
    <% end %>
  </center>
</div>