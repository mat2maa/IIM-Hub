<%= minimal_form_for @video_genre,
                     remote: controller.action_name == 'index' ? true : false,
                     html: {id: "video_genre_form"} do |f| %>

  <div class="controls controls-row">
    <%= f.input_field :name,
                      class: 'span12',
                      placeholder: 'Video Genre Name' %>
  </div>

  <div class="controls controls-row">
    <%= f.input_field :video_parent_genre_id,
                      as: :select,
                      collection: VideoParentGenre.all.collect { |p| [p.name, p.id] },
                      include_blank: true,
                      class: "select2 span12",
                      data: {placeholder: 'Video Parent Genre'} %>
  </div>

  <% if controller.action_name == 'edit' %>
    <%= f.submit "Update #{controller_name.singularize.split('_').join(' ').titleize}",
                 class: 'btn' %>
  <% else %>
    <%= f.submit "Create #{indefinite_articlerize(controller_name.singularize.split('_').join(' ').titleize)}",
                 class: 'btn' %>
  <% end %>
<% end %>
