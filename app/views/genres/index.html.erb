<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render partial: 'form' %>
    <br/>
    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="genres">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Genre Name</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>
      <%= render partial: 'genre',
                 collection: @genres %>
    </table>

    <br/>
    <br/>
    <%= will_paginate @genres,
                      inner_window: 1,
                      renderer: BootstrapPagination::Rails,
                      class: 'pagination pagination-small' %>
    <%
       def items_per_page_select(collection = Genres)
         select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page),
                    class: 'items_per_page_select_menu'
       end
    %>
    <%= form_for '/genres', method: :get, html: {class: 'items_per_page_select'} do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @genres %>
      <%= f.submit "Submit",
                   class: 'btn btn-small' %>
    <% end %>

  </center>
</div>