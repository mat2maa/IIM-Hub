<div id="ajax-modal" class="modal hide fade" tabindex="-1">
  <div class='modal-header'>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">Add movie to playlist</h3>
  </div>
  <div class='modal-body'>
    <div class="modal-body-content"></div>
  </div>
  <div class='modal-footer'>
    <div class="ajax-loader">
      <%= image_tag 'loading-indicator.gif',
                    id: 'loading-indicator',
                    class: 'transparent' %>
    </div>
    <button id="add_selected_to_playlist" type="button" class="btn" onclick="$('input[id=add_selected_hidden]').click();">Add
      Selected to Playlist
    </button>
    <button type="button" data-dismiss="modal" class="btn">Close</button>
  </div>
</div>