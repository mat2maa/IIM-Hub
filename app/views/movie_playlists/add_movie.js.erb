var notice = "<%= escape_javascript((@notice).html_safe) %>";

if(notice !== '') {
  $("#item_added").html("This movie exists in other playlists");
} else {
  $("#item_added").html("<%= "#{@movie_to_add.movie_title} added to playlist" %>");
  var playlist = "<%= escape_javascript(render partial: 'playlist',
                                               object: @movie_playlist) %>";
  $('#playlist').html(playlist);
  $(window).scrollTop($('#item_<%= @movie_playlist_item.id %>').offset().top);
}

$('#spinner').addClass("transparent");
