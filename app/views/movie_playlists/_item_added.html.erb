<% if @notice=="" %>
    "<%= @movie_to_add.movie_title %>" added to playlist
<% else %>
    <%= @notice %>
    <%= link_to_remote "Continue adding to playlist",
                       url: {controller: "movie_playlists",
                             action: "add_movie",
                             id: params[:id],
                             movie_id: @movie_to_add.id,
                             add: 1},
                       class: 'spinner-trigger' %>

<% end %>