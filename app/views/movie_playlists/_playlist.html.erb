<table class="table table-hover" id="no-more-tables" width="100%">
  <thead>
  <tr>
    <% @columns.each.with_index do |column, index| %>
      <th <%= raw("style='display: none;' data-display='none'") if session[:movie_playlist_checked].present? && session[:movie_playlist_checked][index] == 'false' %>>
        <%= column %>
      </th>
    <% end %>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody id="movieplaylist" class="sort-list" data-url="<%= sort_movie_playlist_path %>" style="cursor: move">
  <% @movie_playlist.movie_playlist_items_sorted.each.with_index do |item, index| %>
    <%= render partial: 'playlist_item', object: item, locals: {position: index + 1} %>
  <% end %>
  </tbody>
</table>