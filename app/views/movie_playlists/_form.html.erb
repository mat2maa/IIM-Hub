<%= form_for(@movie_playlist) do |form| %>

    <%= error_messages_for(form.object) %>

    <table class="edit">
      <tr>
        <td class="pl-title">Airline :</td>
        <td>
          <%= select("movie_playlist",
                     "airline_id",
                     Airline.order("name asc")
                     .collect { |p| [p.name + " - " + p.code,
                                     p.id] },
                     {include_blank: true}) %>
          <%= link_to "+",
                      airlines_path,
                      id: "add",
                      target: "_blank" %>
        </td>
        <td class="pl-title">Start Cycle :</td>
        <td>
          <%= form.date_select :start_cycle,
                               discard_day: true,
                               order: [:month,
                                       :year],
                               use_month_numbers: true,
                               start_year: Date.today.year + 2,
                               end_year: 1900 %>
          <strong>End Cycle:</strong>
          <%= form.date_select :end_cycle,
                               discard_day: true,
                               order: [:month,
                                       :year],
                               use_month_numbers: true,
                               start_year: Date.today.year + 2,
                               end_year: 1900 %>
        </td>
        <td class="pl-title">Movie Type :</td>
        <td>
          <%= select("movie_playlist",
                     "movie_type",
                     MoviePlaylist::MOVIE_TYPE,
                     {include_blank: true}) %>
        </td>
        <td class="pl-title">Programmer :</td>
        <td>
          <%= @movie_playlist.user.login if !@movie_playlist.user_id.nil? %></td>
      </tr>
    </table>

    <p>
      <% if params[:action] == "new" %>
          <%= form.submit "Next" %>
      <% else %>
          <%= form.submit "Update" %>
      <% end %>
    </p>

<% end %>
