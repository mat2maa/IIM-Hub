<%= render partial: 'layouts/header' %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="well" id="login-well">
        <%= form_for @user_session,
                     url: user_session_path do |f| %>
          <%= error_messages_for(f.object) %>
          <%= f.text_field :login,
                           placeholder: 'Username' %>
          <br/>
          <%= f.password_field :password,
                               placeholder: 'Password' %>
          <br/>
          <label class="checkbox">
            <%= f.check_box :remember_me %> Remember
          </label>
          <br/>
          <%= f.submit "Login",
                       {class: 'btn'} %>
          <br/>
          <br/>
          <%= link_to "Forgot Password?",
                      new_password_reset_path,
                      {class: 'btn btn-mini'} %>
        <% end %>
      </div>
    </div>
  </div>
</div> <!-- /container -->
