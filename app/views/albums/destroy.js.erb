if @album_is_deleted
  page.visual_effect :fade,
                     "album-#{@album.id}"
else
  page.replace "album-#{@album.id}",
               partial: "album",
               object: @album
  page.replace_html :notice,
                    flash[:notice]
  page.visual_effect :highlight,
                     :notice
  flash.discard
end
