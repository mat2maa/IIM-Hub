<%= form_for @master_playlist_type, remote: true, html: { id: "master_playlist_type_form" } do |f| %>
    <table>
      <tr>
        <td>Master Playlist Type Name</td>
        <td>
          <%= f.text_field :name %>
        </td>
        <td colspan="2">
          <%= f.submit "Add New Master Playlist Type" %>
        </td>
      </tr>
    </table>
<% end %>