<%= render partial: 'header' %>
<div id="content">
  <center>
    <h1>New Supplier Category</h1>

    <%= form_for(@category) do |f| %>
        <%= error_messages_for(f.object) %>

        <p>
          <%= f.label :name %><br/>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :remarks %><br/>
          <%= f.text_field :remarks %>
        </p>

        <p>
          <%= f.submit "Create" %>
        </p>
    <% end %>

    <%= link_to 'Back',
                supplier_categories_path %>

  </center>
  <br/><br/>
</div>