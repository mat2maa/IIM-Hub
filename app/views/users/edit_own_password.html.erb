<%= render partial: 'header' %>
<div id="content">
  <center>
    <h1>Change Password</h1>
    <%= form_for @user do |f| %>

      <%= error_messages_for f.object %>

      <%= f.label :password %>
      <br/>
      <%= f.password_field :password %>
      <br/>
      <br/>
      <%= f.label :password_confirmation %>
      <br/>
      <%= f.password_field :password_confirmation %>
      <br/>
      <br/>

      <%= f.submit "Save" %>
    <% end %>
  </center>
</div>
