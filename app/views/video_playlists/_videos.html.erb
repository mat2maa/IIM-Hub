<% if @videos_count > 0 %>
  <%= form_tag url_for(controller: "video_playlists",
                       action: "add_multiple_videos"),
               id: "multiple_videos",
               remote: true do %>
    <%= hidden_field_tag 'playlist_id',
                         params[:id] %>
    <%= submit_tag 'Add Selected to Playlist',
                   id: 'add_selected_hidden',
                   style: 'display: none;' %>
    <table class="table" id="no-more-tables">
      <thead>
      <tr>
        <th>
          <%= sort_link @search,
                        :id,
                        'ID',
                        {},
                        {remote: true} %>
        </th>
        <th>
          <%= sort_link @search,
                        :programme_title,
                        'Programme Title',
                        {},
                        {remote: true} %>
        </th>
        <th>
          <%= sort_link @search,
                        :video_type,
                        'Video Type',
                        {},
                        {remote: true} %>
        </th>
        <th>In Playlists With Same Airline</th>
        <th>&nbsp;</th>
        <th>
          <%= check_box_tag('check_all',
                            'check_all',
                            false) %>
        </th>
      </tr>
      </thead>

      <tbody>
      <% @videos.each do |video| %>
        <tr class="playlist-entry">
          <td data-title="ID"><%= link_to video.id,
                                          video_path(id: video.id),
                                          target: "_blank" %>&nbsp;</td>
          <td data-title="Programme Title"><%= video.programme_title %>&nbsp;</td>
          <td data-title="Video Type"><%= video.video_type %>&nbsp;</td>
          <td data-title="In Playlists With Same Airline">
            <span id="exists">
                <% if (video.in_playlists!="" && !video.in_playlists.nil?) %>
                    <%= VideoPlaylist.with_same_airline_and_video(video.id,
                                                                  (@video_playlist.airline_id unless @video_playlist.airline.nil?)).collect { |playlist| link_to("#{playlist.airline.code unless playlist.airline.nil?}#{playlist.start_cycle.strftime("%m%y") unless playlist.start_cycle.nil?}", edit_video_playlist_path(playlist), target: "_blank") }.join(', ').html_safe %>
                <% end %>
            </span>
            &nbsp;
          </td>
          <td>
            <%= link_to "add to playlist",
                        add_video_video_playlist_path(@video_playlist, video_id: video.id),
                        method: :post,
                        remote: true,
                        class: 'spinner-trigger' %>
            &nbsp;
          </td>
          <td data-title="Select"><%= check_box_tag "video_ids[]", video.id %>&nbsp;</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

  <br/>
  <br/>

  <%= will_paginate @videos,
                    inner_window: 1,
                    renderer: BootstrapPagination::Rails,
                    class: 'pagination pagination-small' %>
  <%
     def items_per_page_select(collection = Videos)
       select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page),
                  class: 'items_per_page_select_menu'
     end
  %>
  <%= form_for '/videos', method: :get, html: {class: 'items_per_page_select'}, remote: true do |f| %>
    <span>Items per page: </span>
    <%= items_per_page_select @videos %>
    <%= f.submit "Submit",
                 class: 'btn btn-small' %>
    <br>
    <br>
    <%= @videos_count %> videos found
    <br>
  <% end %>
<% else %>
  No videos were found
<% end %>

<script>

  var $ = jQuery;

  $(document).ready(function () {

    $('#check_all').click(function () {
      if (this.checked) {
        $('.playlist-entry').find(':checkbox').each(function () {
          this.checked = true;
        });
      } else {
        $('.playlist-entry').find(':checkbox').each(function () {
          this.checked = false;
        });
      }
    });

  });

</script>