<%= search_form_for @search,
                    class: 'spinner-trigger' do |video_playlists| %>
    <fieldset>
      <legend>Search Videos Playlists</legend>
      Match ANY or ALL of the conditions:
      <%= video_playlists.combinator_select %>

      <%= image_tag 'spinner.gif',
                    id: 'spinner',
                    class: 'transparent' %>
      <br/>
      <table>
        <tr>
          <td>
            Playlist ID:<br/>
            <%= video_playlists.text_field :id_eq,
                                           size: 6 %>
            <br/>
          </td>
          <td>
            Airline:<br/>
            <%= video_playlists.select :airline_id_eq,
                                       Airline.order("name asc")
                                       .collect { |p| [p.name,
                                                       p.id] },
                                       {include_blank: true} %>
            <br/>
          </td>
          <td>Start Playdate:<br/>
            <%= video_playlists.date_select :start_cycle_cont,
                                            {discard_day: true,
                                             order: [:month,
                                                     :year],
                                             include_blank: true,
                                             use_month_numbers: true,
                                             start_year: Date.today.year + 2,
                                             end_year: 1900} %>
            <br/>
          </td>
          <td>End Playdate:<br/>
            <%= video_playlists.date_select :end_cycle_cont,
                                            {discard_day: true,
                                             order: [:month,
                                                     :year],
                                             include_blank: true,
                                             use_month_numbers: true,
                                             start_year: Date.today.year + 2,
                                             end_year: 1900} %>
            <br/>
          </td>
          <td valign="bottom">
            <%= video_playlists.submit "Search" %>
            <input type="reset" value="Reset"></td>
        </tr>
      </table>
    </fieldset>
<% end %>
