<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3" id="search_form">
      <%= render partial: 'video_search_form',
                 object: @search %>
    </div>

    <div class="span9">
      <div id="video_flash_notice"></div>
      <div id="videos">
        <%= render partial: "videos" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var $ = jQuery;

  $(function () {
    $("#video_search_form").submit(function (form) {
      form.preventDefault();
      $.ajax({ url: '/videos',
        type: 'get',
        success: function () {
          var videos = " <%= escape_javascript(render("videos")) %> ";
          $("#videos").html(videos);
        }
      });
    });
  });
</script>
