<%= search_form_for @search,
                    class: 'spinner-trigger' do |video_master_playlists| %>
  <div class="control-group">

    <div class="controls combinator-select-container">
      <%= video_master_playlists.combinator_select %>
    </div>

    <%= video_master_playlists.text_field :id_eq,
                                          placeholder: 'Playlist ID' %>

    <div class="controls">
      <%= video_master_playlists.select :airline_id_eq,
                                        Airline.order("name asc")
                                        .collect { |p| [p.name,
                                                        p.id] },
                                        {include_blank: true},
                                        {class: 'select2',
                                         data: {placeholder: 'Airline'}} %>
    </div>

    <div class="controls">
      <%= video_master_playlists.select :master_playlist_type_id_eq,
                                        MasterPlaylistType.order("name asc")
                                        .collect { |p| [p.name,
                                                        p.id] },
                                        {include_blank: true},
                                        {class: 'select2',
                                         data: {placeholder: 'Master Playlist Type'}} %>
    </div>

    <%= video_master_playlists.text_field :start_cycle_gteq,
                                          data: {behaviour: 'datepicker-months'},
                                          placeholder: 'Start Playdate' %>

    <%= video_master_playlists.text_field :end_cycle_lteq,
                                          data: {behaviour: 'datepicker-months'},
                                          placeholder: 'End Playdate' %>

  </div>

  <%= video_master_playlists.submit "Search",
                                    {class: 'btn'} %>
  <input type="reset" value="Reset" class="btn">

<% end %>
