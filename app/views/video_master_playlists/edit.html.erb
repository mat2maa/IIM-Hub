<% content_for(:head) do %>
    <meta name="pdfkit-orientation" content="Landscape"/>
    <script>
        jQuery(document).ready(function () {
            jQuery('#print_playlist').click(function (event) {
                if (!confirm("ALERT! Please change your page layout to LANDSCAPE when printing")) {
                    event.preventDefault();
                }
            });
        });
    </script>
<% end %>

<%= render partial: 'layouts/videomasterplaylist_header' %>
<center><p style="color: green"><%= flash[:notice] %></p></center>
<div id="content-header-wrapper">
  <div id="content-header-actions">
    <%= link_to "Print Playlist",
                {controller: "video_master_playlists",
                 action: "show",
                 id: @video_master_playlist},
                id: 'print_playlist',
                target: '_blank' %>

    |

    <%= link_to "Download PDF",
                {controller: "video_master_playlists",
                 action: "show",
                 id: @video_master_playlist,
                 format: "pdf"} %>

    |

    <%= link_to "Export as Excel",
                controller: "video_master_playlists",
                action: "export_to_excel",
                id: @video_master_playlist %>

    |

    <%= link_to "Create a playlist",
                new_video_master_playlist_path %>
  </div>
  <div id="content-header">Video Masters Playlists</div>
</div>

<div id="content">
  <center>
    <h2>Edit Video Master Playlist</h2>
    <br/>
    <div class="action-button">
        <%= link_to "Add Master", add_video_master_to_playlist_path(id: @video_master_playlist.id), id: "add_video_master_to_playlist" %>
    </div>
    <br/>
    <%= render 'form' %>


    <div id="playlist">
      <%= render partial: 'playlist',
                 object: @video_master_playlist %>
    </div>

    <%= link_to 'Back',
                video_master_playlists_path %>

  </center>

  <div id="add_master_dialog" style="display:none;">
    <div id="add_master">
    </div>
  </div>

</div>


<script type="text/javascript">
    var $ = jQuery;

    $(function () {
        $(document).on("click", "#add_video_master_to_playlist", function (track) {
            track.preventDefault();
            $('#add_master_dialog').dialog({
                title: 'Add Master',
                modal: true,
                width: 740,
                height: 540,
                position: ['center', 100],
                close: function (track, ui) {
                    $('#add_master_dialog').dialog('destroy')
                }
            });
            $.ajax({ url: '/add_video_master_to_playlist/<%= @video_master_playlist.id %>',
                type: 'get',
                dataType: 'script'
            });
        });
    });
</script>
