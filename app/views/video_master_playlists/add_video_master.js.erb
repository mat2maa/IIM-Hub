var notice = "<%= escape_javascript((@notice).html_safe) %>";

if(notice !== '') {
  $("#item_added").html("This master exists in other playlists");
} else {
  $("#item_added").html("<%= "#{@master_to_add.episode_title} added to playlist" %>");
  var playlist = "<%= escape_javascript(render partial: 'playlist',
                                               object: @video_master_playlist) %>";
  $('#playlist').html(playlist);
}

$('#spinner').addClass("transparent");
