<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3" id="search_form">
      <%= render partial: 'video_master_search_form',
                 object: @search %>
    </div>

    <div class="span9">
      <div id="video_master_flash_notice"></div>
      <div id="video_masters">
        <%= render partial: "video_masters" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var $ = jQuery;

  $(function () {
    $("#video_master_search_form").submit(function (form) {
      form.preventDefault();
      $.ajax({ url: '/video_masters',
        type: 'get',
        success: function () {
          var video_masters = " <%= escape_javascript(render("video_masters")) %> ";
          $("#video_masters").html(video_masters);
        }
      });
    });
  });
</script>
