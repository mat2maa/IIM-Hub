<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render partial: 'form' %>
    <br/>
    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="publishers">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Publisher Name</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>
      <%= render partial: 'publisher',
                 collection: @publishers %>
    </table>

    <br/>
    <br/>
    <%= will_paginate @publishers %>
    <%
      def items_per_page_select(collection = Publishers)
        select_tag :per_page, options_for_select([10, 20, 50, 100], collection.per_page)
      end
    %>
    <%= form_for '/publishers', method: :get do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @publishers %>
      <%= f.submit "Submit" %>
    <% end %>

  </center>
</div>