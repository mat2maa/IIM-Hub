<% if @movies_count > 0 %>
	<%= @movies_count %> movies found
	<table cellspacing="0" width="100%">
	<tr>
		<th>
          <%= sort_link(@search, :id, "ID") %>
        </th>
		<th>
          <%= sort_link(@search, :movie_title, "Movie Title") %>
        </th>
		<th>
          <%= sort_link(@search, :movie_distributor, "Movie Distributor") %>
        </th>
		<th>
          <%= sort_link(@search, :movie_type, "Movie Type") %>
          /th>
		<th>
          <%= sort_link(@search, :airline_release_date, "Airline Release Date") %>
        </th>
		<th>
          <%= sort_link(@search, :screener_received_date, "Screener Recieved") %>
        </th>
		<th colspan="2"></th>			
	</tr>
	
	<%= render :partial => "movie", :collection => @movies %>
	</table>
	
  <% if @search.page_count > 1 %>
		<br/><br/>
		<div class="page_links">
			<%=	page_links()%>
		</div>
  <% end %>
<% else %>
	
	No movies were found

<% end %>