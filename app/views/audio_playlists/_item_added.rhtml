<% if @notice=="" %>
"<%=h @track.title_original %>" added to playlist
<% else %>
<%= @notice %>
<%= link_to_remote "Continue adding to playlist", 
:url => {:controller => "audio_playlists", 
:action => "add_track", 
:id => params[:id], 
:track_id => @track.id,
:add => 1},
:loading => "Element.show('spinner')",
:complete => "Element.hide('spinner')" %>
<% end %>