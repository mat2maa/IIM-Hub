<% if notice=="" %>
  "<%= track.title_original %>" added to playlist
<% else %>
  <%= notice.html_safe %>
  <%= link_to "Continue adding to playlist",
              add_track_audio_playlist_path(@audio_playlist, track_id: track.id, add: 1),
              method: :post,
              remote: true,
              class: 'spinner-trigger' %>
<% end %>