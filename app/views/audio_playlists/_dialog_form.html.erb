<center>
    <strong>Add Track to Playlist</strong><br/>

    <div id="search_form">
      <%= render partial: 'track_search_form',
                 object: @search %>
    </div>
    <%= image_tag 'spinner.gif',
                  id: 'spinner',
                  class: 'transparent' %>

    <div id="item_added"></div>

    <div id="tracks">
      <%= render partial: "tracks" %>
    </div>
</center>


<script type="text/javascript">
    var $ = jQuery;

    $(function () {
        $("#track_search_form").submit(function (form) {
            form.preventDefault();
            $.ajax({ url: '/tracks',
                type: 'get',
                success: function() {
                    var tracks = " <%= escape_javascript(render("tracks")) %> ";
                    $("#tracks").html(tracks);
                }
            });
        });
    });
</script>
