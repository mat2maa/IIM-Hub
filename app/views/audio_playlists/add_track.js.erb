var notice = "<%= escape_javascript(render partial: 'item_added',
                                           locals: { track: @track, notice: @notice }) %>",
    playlist = "<%= escape_javascript(render partial: 'playlist',
                                             object: @audio_playlist) %>",
    duration = "<%= escape_javascript(render partial: 'duration',
                                             object: @audio_playlist) %>";

$('#item_added').html(notice);
$('#playlist').html(playlist);
$('#duration').html(duration);
$('#spinner').addClass("transparent");
