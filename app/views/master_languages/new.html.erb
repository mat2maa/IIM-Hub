<%= render partial: 'header' %>
<div id="content">
  <center>
    <h1>New Language</h1>

    <% form_for(@master_language) do |f| %>
      <%= error_messages_for(f.object) %>

      <p>
        Language<br/>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.submit "Create" %>
      </p>
    <% end %>

    <%= link_to 'Back',
                master_languages_path %>

  </center>
  <br/><br/>
</div>