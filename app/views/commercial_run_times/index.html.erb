<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render partial: 'form' %>
    <br/>

    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="commercial_run_times">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Minutes</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>

      <%= render partial: 'commercial_run_time',
                 collection: @commercial_run_times %>

    </table>
    <br/>
    <br/>
    <%= will_paginate @commercial_run_times %>
    <%
      def items_per_page_select(collection = CommercialRunTimes)
        select_tag :per_page, options_for_select([10, 20, 50, 100], collection.per_page)
      end
    %>
    <%= form_for '/commercial_run_times', method: :get, html: { class: 'items_per_page_select' } do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @commercial_run_times %>
      <%= f.submit "Submit" %>
    <% end %>
  </center>
</div>