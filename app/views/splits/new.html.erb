<%= render :partial => 'header' %>
<div id="content">
<center>
<h1>New split</h1>

<% form_for(@split) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', splits_path %>

</center>
<br/><br/>
</div>