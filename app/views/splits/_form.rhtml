<% form_remote_tag :url => {:action => 'create'}, :html => {:id => 'split_form'} do %>
<table>
  <tr>
	<th>Split Name</th>
    <td>
      <%= text_field_tag 'split[name]', "", :size=>5 %>
    </td>
		<th>Split Dur</th>
    <td>    
      <%= text_field_tag 'split[duration]', "", :size=>5 %>
    </td>
		<th>More Than</th>
		<td>    
      <%= text_field_tag 'more_than_min', "", :size=>3 %> min
			<%= text_field_tag 'more_than_sec', "", :size=>3 %> sec
    </td>
		<th>Less Than</th>
		<td>    
      <%= text_field_tag 'less_than_min', "", :size=>3 %> min
			<%= text_field_tag 'less_than_sec', "", :size=>3 %> sec
    </td>
    <td colspan="2">
      <%= submit_tag "Add New Split" %>
    </td>
  </tr>
</table>
<% end %>