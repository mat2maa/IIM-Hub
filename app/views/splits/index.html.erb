<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render partial: 'form' %>
    <br/>
    Note: Editing/Deleting splits will affect ALL splits in ALL playlists
    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="splits">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Split Name</td>
        <td class="list-header">Split Duration</td>
        <td class="list-header">More Than</td>
        <td class="list-header">Less Than</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>
      <%= render partial: 'split',
                 collection: @splits %>
    </table>

    <br/>
    <br/>
    <%= will_paginate @splits,
                      inner_window: 1,
                      renderer: BootstrapPagination::Rails,
                      class: 'pagination pagination-small' %>
    <%
       def items_per_page_select(collection = Splits)
         select_tag :per_page, options_for_select([10, 20, 50, 100, 300], collection.per_page),
                    class: 'items_per_page_select_menu'
       end
    %>
    <%= form_for '/splits', method: :get, html: {class: 'items_per_page_select'} do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @splits %>
      <%= f.submit "Submit",
                   class: 'btn btn-small' %>
    <% end %>

  </center>
</div>